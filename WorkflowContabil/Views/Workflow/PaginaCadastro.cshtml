@model NvtecUploadFiles.Models.ClassUsuario
@{
    ViewBag.Title = "Cadastrar novo usuário";
}
<link rel="stylesheet" href="~/Content/TabbedFormStylesheet.css" />
<script src="~/Scripts/TabbedForm.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2 class="text-center">Cadastro de usuários</h2>
            <hr />
            @using (Html.BeginForm("Cadastro", "Usuario", FormMethod.Post, new { id = "register-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(m => m.NomeUsuario, new { required = "required", name = "NomeUsuario", id = "NomeUsuario", tabindex = "1", @class = "form-control", placeholder = "Usuário" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m=> m.Email,new { required = "required", name = "Email", id = "Email", tabindex = "1", @class = "form-control", placeholder = "Endereço de e-mail" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m=> m.Senha, new { type = "password", required = "required", name = "Senha", id = "password", tabindex = "2", @class = "form-control", placeholder = "Senha" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m=> m.ConfirmarSenha,new { type = "password", required = "required", name = "ConfirmarSenha", id = "confirm-password", tabindex = "2", @class = "form-control", placeholder = "Confirmar senha" })
                </div>
                <div class="form-group">
                    <label for="sel1">Tipo de usuário:</label>
                    <select class="form-control" id="sel1" required="required" name="TipoUsuario">
                        <option value="usuario">Usuário do sistema</option>
                        <option value="cliente">Cliente</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Cadastrar usuário">
                        </div>
                    </div>
                </div>
            }
            <h4 class="text-info">@ViewBag.Message</h4>
        </div>
    </div>
</div>
